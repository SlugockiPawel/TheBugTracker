@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<BTUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="row align-content-center justify-content-center">
    <div class="col-11 col-sm-9 col-lg-7 col-xxl-4">
        <div class="card shadow my-5">
            <div class="card-body">
                <h5 class="card-title text-center">Welcome to issue tracking app!</h5>
                <p class="card-text">The app allows every company to create projects where issues can be reported by users and managed by the competent, designated company workers</p>
                <p class="card-text">Below, you can login as one of the users in different roles:</p>
                <div class="accordion" id="accordionRolesOverview">

                    @* Admin item *@
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAdmin" aria-expanded="false" aria-controls="collapseAdmin">
                                Admin
                            </button>
                        </h2>
                        <div id="collapseAdmin" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionRolesOverview">
                            <div class="accordion-body">
                                <p>Admins are able to:</p>
                                <ul>
                                    <li>Add/Edit/Delete companies</li>
                                    <li>Add/Edit/Delete projects</li>
                                    <li>Add/Edit/Delete tickets</li>
                                    <li>Add/Edit/Delete notifications</li>
                                    <li>Assign Project Managers to projects</li>
                                    <li>Assign Developers to project and tickets</li>
                                </ul>
                                @if (!SignInManager.IsSignedIn(User))
                                {
                                    <form method="post">
                                        <button asp-controller="Home" asp-action="DemoLogin" class="btn btn-primary">
                                            @Html.Hidden("userName", "John")
                                            log in as John Admin
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                    @* PM item *@
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePM" aria-expanded="false" aria-controls="collapsePM">
                                Project Manager
                            </button>
                        </h2>
                        <div id="collapsePM" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionRolesOverview">
                            <div class="accordion-body">
                                <p>Project Managers are able to:</p>
                                <ul>
                                    <li>Add/Edit/Delete projects</li>
                                    <li>Add tickets</li>
                                    <li>Add notifications</li>
                                    <li>Assign Developers to their project and tickets</li>
                                </ul>
                                @if (!SignInManager.IsSignedIn(User))
                                {
                                    <form method="post">
                                        <button asp-controller="Home" asp-action="DemoLogin" class="btn btn-primary">
                                            @Html.Hidden("userName", "Monica")
                                            log in as Monica PM
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>

                    @* Developer item *@
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDev" aria-expanded="false" aria-controls="collapseDev">
                                Developer
                            </button>
                        </h2>
                        <div id="collapseDev" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionRolesOverview">
                            <div class="accordion-body">
                                <p>Developers are able to:</p>
                                <ul>
                                    <li>Work on assigned tickets- comments/add attachments/resolve and close a ticket</li>
                                </ul>
                                @if (!SignInManager.IsSignedIn(User))
                                {
                                    <form method="post">
                                        <button asp-controller="Home" asp-action="DemoLogin" class="btn btn-primary">
                                            @Html.Hidden("userName", "Dave")
                                            log in as Dave Dev
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>

                    @* Developer item *@
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingFour">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSub" aria-expanded="false" aria-controls="collapseSub">
                                Submitter
                            </button>
                        </h2>
                        <div id="collapseSub" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionRolesOverview">
                            <div class="accordion-body">
                                <p>Submitters are able to:</p>
                                <ul>
                                    <li>Work on assigned tickets- comments/add attachments/resolve and close a ticket</li>
                                </ul>
                                @if (!SignInManager.IsSignedIn(User))
                                {
                                    <form method="post">
                                        <button asp-controller="Home" asp-action="DemoLogin" class="btn btn-primary">
                                            @Html.Hidden("userName", "Diana")
                                            log in as Diana Sub
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>